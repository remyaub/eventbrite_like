<div class="row justify-content-center align-items-center" style="margin-top: 10vh; margin-bottom: 10vh;">

            <div class="col-md-8 col-sm-12">

                  <%= form_tag url_for(action: 'create'), method: "post" do %>
                    <div class="form-group">
                      <%= label_tag 'Title' %>
                      <%= text_field_tag 'title', "", :class => "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Description' %>
                      <%= text_area_tag 'description', "", :class => "form-control", :rows => "4" %>
                    </div>

                     <div class="form-group">
                      <%= label_tag 'Start Date' %>
                      <%= date_field_tag 'start_date', "", :class => "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Duration' %>
                      <%= text_field_tag 'duration', "", :class => "form-control", :rows => "4" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Price' %>
                      <%= text_field_tag 'price', "", :class => "form-control", :rows => "4" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Location' %>
                      <%= text_field_tag 'location', "", :class => "form-control", :rows => "4" %>
                    </div>


                    <%= submit_tag "Create Event", :class => "btn btn-dark" %>

                  <% end %><br>
                    <% if @event.errors.any? %>
                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">Crap!</h4>
                            <p><% @event.errors.full_messages.each do |message| %></p>
                            <li><%= message %></li>  
                            <hr>
                            <% end %>
                        </div>
                    <% end %>

            </div>
</div>